<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFCD">


    <me.codeboy.android.aligntextview.AlignTextView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:id="@+id/show"
        android:layout_width="350dp"
        android:layout_height="223dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/textview"
        android:gravity="left"
        android:padding="8dp"
        android:text="TextView"
        android:textColor="#673AB7"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/odd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="ODD问卷"

        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/show"
        app:layout_constraintStart_toStartOf="@+id/show"
        app:layout_constraintTop_toBottomOf="@+id/show" />

    <Button

        android:id="@+id/fa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="FACES问卷"

        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/odd"
        app:layout_constraintTop_toBottomOf="@+id/odd" />

    <Button
        android:id="@+id/erc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"

        android:text="ERC问卷"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/ders"
        app:layout_constraintTop_toBottomOf="@+id/ders" />

    <Button
        android:id="@+id/api"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="API分量表"
        android:textColor="@color/white"

        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/fa"
        app:layout_constraintTop_toBottomOf="@+id/fa" />

    <Button
        android:id="@+id/ders"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"

        android:text="DERS问卷"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/api"
        app:layout_constraintTop_toBottomOf="@+id/api" />




</androidx.constraintlayout.widget.ConstraintLayout>